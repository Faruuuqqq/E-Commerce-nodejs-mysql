<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <link rel="stylesheet" href="/css/styles.css"> 
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>

<div class="container mt-5">
    <h1 class="text-center">Your Shopping Cart</h1>

    <% if (cartItems && cartItems.length > 0) { %>
        <div class="cart-container p-4">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% let totalPrice = 0; %>
                    <% cartItems.forEach(item => { %>
                        <% totalPrice += item.price * item.quantity; %>
                        <tr>
                            <td><%= item.name %></td>
                            <td>$<%= item.price %></td>
                            <td><%= item.quantity %></td>
                            <td>$<%= item.price * item.quantity %></td>
                            <td>
                                <a href="/cart/remove/<%= item.productId %>" class="btn btn-danger btn-sm">Remove</a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>

            <h3 class="fw-bold text-end">Total: $<%= totalPrice %></h3>

            <div class="text-end mt-3">
                <a href="/cart/clear" class="btn btn-outline-danger">Clear Cart</a>
                <a href="/checkout" class="btn btn-success">Proceed to Checkout</a>
            </div>

            <form action="/cart/buy" method="POST" class="mt-4">
                <label for="address" class="form-label">Enter your address:</label>
                <input type="text" name="address" id="address" class="form-control" required>
                <button type="submit" class="btn btn-primary mt-2">Checkout</button>
            </form>
        </div>
    <% } else { %>
        <p class="text-center mt-4">Your cart is empty.</p>
    <% } %>

    <div class="text-center mt-3">
        <a href="/" class="btn btn-secondary">Continue Shopping</a>
    </div>
</div>

</body>
</html>
